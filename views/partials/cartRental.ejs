<div class="property">
    <div class="slideshow">
        <img src="<%= cartRental.imageUrl %>" alt="<%= cartRental.headline %>">
    </div>
    <h3><%= cartRental.headline %></h3>
    <div class="property-details">
        <div class="property-card">
            <p>City</p>
            <strong><%= cartRental.city %></strong>
        </div>
        <div class="property-card">
            <p>Province</p>
            <strong><%= cartRental.province %></strong>
        </div>

        <div class="property-card">
            <p>Price Per Night</p>
            <strong>C$<%= cartRental.pricePerNight %></strong>
        </div>
    </div>
</div>
    <!-- Add controls for adjusting the number of nights and removing from the cart -->
    <div class="cart-controls">
        <label for="numNights">Number of Nights:</label>
        <input type="number" name="numNights" value="<%= cartRental.days %>" min="1">
        <!-- You can use JavaScript to update the cart on change -->

        <button class="remove-from-cart" onclick="removeFromCart('<%= cartRental.id %>')">Remove from Cart</button>
    </div>

    <div>
        <p>Total Price</p>
        <strong>C$<%= cartRental.pricePerNight * cartRental.days %></strong>
    </div>
</div>
