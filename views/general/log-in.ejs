<div class="valid-container">
    <h1 class="valid-title">Login</h1>
    <form class="valid-form" action="/log-in" method="post">
        <div class="input-container">
            <label for="email" class="label">Email</label>
            <input type="text" id="email" name="email" class="input" value=<%= typeof email !== 'undefined' ? email : '' %>>
            <small><%= typeof loginError !== 'undefined' ? (loginError.emailError) : "" %></small>
        </div>
        <div class="input-container">
            <label for="password" class="label">Password</label>
            <input type="password" id="password" name="password" class="input" value=<%= typeof password !== 'undefined' ? password : '' %>>
            <small><%= typeof loginError !== 'undefined' ? loginError.passwordError : "" %></small>
        </div>
        <label class="label">Role</label>
            <div>
                <input type="radio" id="dataEntryClerk" name="role" value="dataEntryClerk" checked>
                <label for="dataEntryClerk">Data Entry Clerk</label>
            </div>
            <div>
                <input type="radio" id="customer" name="role" value="customer">
                <label for="customer">Customer</label>
            </div>
        <div id="loginError" class="error"></div>
        <button type="submit" class="valid-button">Login</button>
    </form>
</div>
